%h2
= @smithsonian.name
%br
= @smithsonian.description
%br
= link_to 'Edit Museum Information', edit_smithsonian_path(@smithsonian)
%br
%br
%br
%h4
  #{@smithsonian.name} Minerals
%br
%ul
  - @smithsonian.minerals.each do |mineral|
    - if mineral.name
      %div
        %strong
        Mineral Name:
        = mineral.name
        / = link_to "#{mineral.name}", smithsonian_mineral_path(@smithonian, mineral)
      %div
        %strong 
        MOH's Hardness:
        = mineral.moh
      %div
        %strong
        Origin:
        = mineral.origin
        = link_to 'Show ', smithsonian_mineral_path(@smithsonian, mineral)
        = link_to 'Edit ', edit_smithsonian_mineral_path(@smithsonian, mineral)
        = link_to 'Delete', smithsonian_mineral_path(@smithsonian, mineral) , method: :delete
    / %div
    /   = link_to "Edit" edit_smithsonian_mineral_path(@smithsonian, mineral)
    /   %br
    /   = link_to "Remove" smithsonian_mineral(@smithsonian, mineral), method: :delete
    / = mineral_stats(@minerals)
    %br
%br
= link_to "Add a new mineral",
  new_smithsonian_mineral_path(@smithsonian, @mineral)
%br
%br
= link_to 'View Scientists Working With This Museum', scientists_path
%br
%br
= link_to 'Back', smithsonians_path
